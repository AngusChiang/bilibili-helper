{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "bilibiliHelper": [
        "src/public_api.ts"
      ]
    }
  },
  "include": [
    "ts/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
  "files": [
    "src/public_api.ts"
  ],
  "types": [
    "chrome"
  ],
  "angularCompilerOptions":{
    "genDir": "i18n",
    "flatModuleOutFile": "index.js"
  }
}
